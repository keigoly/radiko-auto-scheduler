{
  "manifest_version": 3,
  "name": "radikoかんたん予約スケジューラー",
  "version": "1.0.1",
  "icons": {
    "16": "icons.png",
    "48": "icons.png",
    "128": "icons.png"
  },
  "description": "番組表を作って自動で切り替え・自動再生します",
  "permissions": [
    "tabs",
    "alarms",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://radiko.jp/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "スケジュール設定"
  },
  "background": {
    "service_worker": "background.js"
  }
}